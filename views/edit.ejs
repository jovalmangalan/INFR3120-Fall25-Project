<!DOCTYPE html>
<html>
<head>
    <title>Edit Appointment</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <div class="container">
        <img src="/logo.png" class="logo" alt="Logo">
        <h1>Edit Appointment</h1>

        <form method="POST" action="/edit/<%= appt.id %>">

            <% 
                const d = new Date(appt.datetime);
                const formatted = d.toISOString().slice(0, 16); 
            %>

            <input type="text" name="patient" value="<%= appt.patient %>" required>
            <input type="text" name="doctor" value="<%= appt.doctor %>" required>
            <input type="datetime-local" name="datetime" value="<%= formatted %>" required>

            <button type="submit">Save Changes</button>
        </form>

        <a class="small-link" href="/calendar">Back to Calendar</a>
        <a class="small-link" href="/">Back to Home</a>
    </div>

</body>
</html>

