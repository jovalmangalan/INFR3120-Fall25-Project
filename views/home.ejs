<!DOCTYPE html>
<html>
<head>
    <title>Appointment System</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- Show profile image when logged in -->
    <% if (user) { %>
        <img src="/profile/image" class="avatar-small" alt="Profile Image">
    <% } %>

    <img src="/logo.png" alt="Logo" class="logo">

    <h1>Healthcare Appointment System</h1>

    <div class="nav">
        <a href="/schedule">Schedule Appointment</a>
        <a href="/calendar">View Calendar</a>

        <% if (!user) { %>
            <a href="/login">Login</a>
        <% } else { %>
            <a href="/profile">Profile</a>
            <a href="/logout">Logout</a>
        <% } %>

    </div>

    <h2>Upcoming Appointments</h2>

    <table>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date & Time</th>
            <th>Action</th>
        </tr>

        <% if (appts.length === 0) { %>
            <tr>
                <td colspan="4">No appointments yet</td>
            </tr>
        <% } %>

        <% appts.forEach(a => { %>
            <tr>
                <td><%= a.patient %></td>
                <td><%= a.doctor %></td>
                <td><%= a.datetime %></td>
                <td class="action-links">
                    <a href="/edit/<%= a.id %>" class="edit">Edit</a>
                    <a href="/delete/<%= a.id %>" class="delete">Delete</a>
                </td>
            </tr>
        <% }) %>
    </table>

</body>
</html>
